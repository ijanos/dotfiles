Config { font = "xft:Fixed-8:style=Bold"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Com "uptime" ["|","sed","'s/.*://; s/,//g'"] "load" 13
                    , Run StdinReader
                    , Run Memory ["-t","Mem: <used>Mb"] 10
                    , Run Date "<fc=#999999>%Y-%m-%_d</fc> <fc=#FFFFFF>%H:%M</fc>" "date" 19
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %load% | %memory% | %date%"
       }

