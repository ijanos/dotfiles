<!--Menus-->
<!-- OpenOffice.org menu -->

<menu id="ooffice-menu" label="OOffice">
	<item label="Writer">
		<action name="Execute"><command>soffice -writer</command></action>
	</item>
	<item label="Calc">
		<action name="Execute"><command>soffice -calc</command></action>
	</item>
	<item label="Impress">
		<action name="Execute"><command>soffice -impress</command></action>
	</item>
	<item label="Draw">
		<action name="Execute"><command>soffice -draw</command></action>
	</item>
	<item label="Base">
		<action name="Execute"><command>soffice -base</command></action>
	</item>
</menu>

<!--Exit menu-->

<menu id="exit-menu" label="Exit">
	<item label="Logout">
		<action name="Exit" />
	</item>
	<separator label="(^_^)bye" />
	<item label="Reboot">
		<action name="Execute"><prompt>Reboot the computer?</prompt><command>sudo /sbin/shutdown -r now</command></action>
	</item>
	<item label="Shutdown">
		<action name="Execute"><prompt>Halt the computer?</prompt><command>sudo /sbin/shutdown -h now</command></action>
	</item>
</menu>

<!--Openbox menu-->

<menu id="omenu" label="Openbox">
       <item label="ObConf">
			<action name="Execute"><command>obconf</command></action>
       </item>
		 <item label="regenarete menu">
			 <action name="Execute"><command>~/.bin/menugen.sh</command></action>
		 </item>
		 <separator />
		 <item label="edit menu.xml">
			 <action name="Execute"><command>gvim ~/.config/openbox/menu.xml</command></action>
		 </item>
		 <item label="edit rc.xml">
		 	<action name="Execute"><command>gvim ~/.config/openbox/rc.xml</command></action>
		 </item>
		 <item label="edit autostart.sh">
		 	<action name="Execute"><command>gvim ~/.config/openbox/autostart.sh</command></action>
		 </item>
		 <separator />
       <item label="Reconfigure">
               <action name="Reconfigure" />
       </item>
       <item label="Restart">
               <action name="Restart" />
     	</item>
</menu>

